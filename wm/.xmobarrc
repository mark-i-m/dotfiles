Config { font = "xft:DejaVu Sans Mono:size=9:bold:antialias=true"
       , bgColor = "black"
       , fgColor = "grey"
       , position = TopW L 98
       , hideOnStart = False
       , lowerOnStart = False
       , commands = [
              Run Memory ["-t", "Mem: [<usedratio>%]", "-h", "red", "-H", "90"] 50
            , Run MultiCpu ["-t", "Cpu: [<total>%]", "-h", "red", "-H", "90"] 50
            , Run Date "%a %b %_d %Y <fc=#ee9a00>%I:%M:%S</fc>" "date" 10
            , Run StdinReader
          ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %multicpu% %memory%     <fc=#FFFF00>%date%</fc>  "
       }
